
@model List<PostModel>
<div class="text-center">
    <h1 class="display-4 hide-mobile welcome" >
        Welcome to Kaywan's blog
    </h1>
</div>
<div>
    @foreach (var item in Model)
    {
        <div class="post-colored">
            <div>
                <h3>
                    @Html.ActionLink(item.Title, "article", "Home", new { fileName = item.Link })
                </h3>

            </div>
            <div class="post-date">
                <span>@item.CreationDate</span>
                <span>by</span>
                <span>@item.Author</span>
            </div>

            <div style="text-align: justify">@item.Summary</div>
        </div>
    }
</div>